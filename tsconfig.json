{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["app/*"],
			"@screens/*": ["screens/*"],
			"@shared/*": ["shared/*"],
			"@components/*": ["components/*"],
			"@ui/*": ["components/ui/*"],
			"@assets/*": ["assets/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts"
	]
}
